<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:opacity="opaque">

    <item android:drawable="@color/colorBackground"/>
    <item>
        <bitmap
            android:src="@drawable/ic_launcher_foreground"
            android:gravity="center"/>
    </item>

</layer-list>